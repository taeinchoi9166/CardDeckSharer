<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/card_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="CNo.92 위해허룡 Heart－eartH Chaos Dragon"
            android:fontWeight="600"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="18dp"
            />
        <TextView
            android:id="@+id/card_search_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontWeight="700"
            android:layout_below="@+id/card_search_name"
            android:layout_alignLeft="@+id/card_search_name"
            android:text="바람"/>
        <TextView
            android:id="@+id/card_search_detail_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_search_type"
            android:text="랭크 3 [ 마법사족 / 엑시즈 / 효과 ] 공격력 1000/수비력 2600"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_search_detail_spec">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_search_get_button"
                android:text="카드 추가"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_search_view_info"
                android:text="정보 보기"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>