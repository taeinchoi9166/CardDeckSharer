<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/card_edit_name"
            android:text="GGGG"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/card_edit_dec_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:padding="8dp"
                android:text="&lt;"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/card_edit_count"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/card_edit_dec_btn"
                android:paddingTop="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="14dp" />

            <Button
                android:id="@+id/card_edit_inc_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/card_edit_count"
                android:padding="8dp"
                android:text="&gt;"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>